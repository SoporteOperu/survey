<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="survey_result_date_filter"
        inherit_id="survey.survey_page_statistics_inner"
        name="Survey Result Date Filter"
    >
        <xpath expr="//div[hasclass('o_survey_session_leaderboard')]" position="after">
            <div
                t-if="question_and_page_data"
                class="card d-print-none overflow-visible"
            >
                <div class="card-header">
                    <span class="fa fa-filter" />
                    Date Range Filters
                </div>
                <div class="card-body form-inline">
                    <div class="form-group">
                        <span
                            class="badge badge-secondary"
                            for="datetimepicker_from"
                        >Date From</span>
                        <div
                            class="input-group o_datepicker"
                            data-target-input="nearest"
                        >
                            <input
                                type="text"
                                class="form-control o_datepicker_input o_input datetimepicker-input"
                                id="datetimepicker_from"
                                name="datetimepicker_from"
                                data-toggle="datetimepicker"
                                data-date-format="YYYY-MM-DD"
                                placeholder="YYYY-MM-DD"
                                t-attf-data-target="#datetimepicker_from"
                            />
                        </div>
                    </div>
                    <div class="form-group">
                        <span
                            class="badge badge-secondary"
                            for="datetimepicker_end"
                        >Date End</span>
                        <div
                            class="input-group o_datepicker"
                            data-target-input="nearest"
                        >
                            <input
                                type="text"
                                class="form-control o_datepicker_input o_input datetimepicker-input"
                                id="datetimepicker_end"
                                name="datetimepicker_end"
                                data-toggle="datetimepicker"
                                data-date-format="YYYY-MM-DD"
                                placeholder="YYYY-MM-DD"
                                t-attf-data-target="#datetimepicker_end"
                            />
                        </div>
                    </div>
                    <div class="form-group">
                        <span
                            id="filter_date"
                            class="filter_date btn btn-primary"
                        >Filter</span>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
